<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anggit.android.anggitnur_1202154362_modul1.MainActivity">


    <TextView
        android:id="@+id/textViewMakanMalam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:text="Makan Malam"
        android:textAlignment="center"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textViewMilea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewMakanMalam"
        android:layout_marginTop="19dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="dengan Milea"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMilea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        />

    <EditText
        android:id="@+id/editTextPorsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        />


    <Button
        android:id="@+id/buttonEatbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonApnormal"
        android:layout_alignBottom="@+id/buttonApnormal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:paddingLeft="32sp"
        android:paddingRight="32sp"
        android:layout_weight="1"
        android:onClick="Eatbus"
        android:text="EATBUS"
        android:textColor="@android:color/white"
        android:background="#E91E63"
        />

    <Button
        android:id="@+id/buttonApnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:layout_weight="1"
        android:onClick="Apnormal"
        android:text="APNORMAL"
        android:textColor="@android:color/white"
        android:background="#E91E63" />

</RelativeLayout>


